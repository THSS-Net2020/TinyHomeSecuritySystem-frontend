@media screen and (max-width: 750px) {
  .app-name {
    font-size: 30px !important;
  }
  .navlinks a {
    font-size: 18px !important;
  }
  .current-user {
    display: none;
  }
}

.app-name
  font-size: 40px
  font-weight: 500

.app-menu
  position: relative

.current-user
  position: absolute
  top: 20px
  right: 20px

.navlinks
  width: 100%
  height: 60px
  overflow-y: hidden
  overflow-x: auto
  margin-bottom: 30px
  display: flex
  align-items: flex-end

  a
    font-size: 26px
    color: #000
    display: inline-block
    margin-right: 20px
    font-weight: 200
    transition: .3s all
    &.active
      font-size: 30px
      font-weight: 400